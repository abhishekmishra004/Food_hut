<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transperancy_layer"
    tools:context=".viewspecialDish">

    <TextView
        android:id="@+id/sResto_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Restro Name"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/sDish_imagee"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/sResto_name" />

    <TextView
        android:id="@+id/sDish_namee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sDish_imagee"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sDish_Costee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sDish_imagee"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:textColor="#E8000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/sDish_Costee"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <TextView
            android:id="@+id/sDish_detailsee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#E8000000"
            android:textStyle="bold" />
    </ScrollView>

    <Button
        android:id="@+id/sButtonAddCartee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/add_cart"
        android:textAllCaps="false" />

</RelativeLayout>